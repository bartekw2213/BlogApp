<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); -%> 
<body>
    <%- include('partials/navbarLogged'); -%> 
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h2 class="display-4">Edit post</h2>
                <form action="/logged/post/edit/<%= post._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" class="form-control" id="title" value="<%= post.title %>" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Short description</label>
                        <textarea name="description" id="description" class="form-control" cols="30" rows="3" required><%= post.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="markdown">Markdown</label>
                        <textarea name="markdown" id="markdown" class="form-control" cols="30" rows="10" required><%= post.markdown %></textarea>
                    </div>
                    <button class="btn btn-warning btn-block" type="submit">Submit your edit</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('partials/bootstrapJS'); -%> 
</body>
</html>

